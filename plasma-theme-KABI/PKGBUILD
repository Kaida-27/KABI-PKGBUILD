pkgname=plasma-theme-KABI
pkgver=1.1
pkgrel=2
pkgdesc="Plasma 5 theme for KABI"
arch=('any')
url="https://github.com/Kaida-27"
license=('CCPL:cc-by-sa')
depends=('plasma-workspace')
source=(git+"https://github.com/Kaida-27/plasma-theme-KABI")
md5sums=('SKIP')

package() {
  install -D "$pkgname"/look-and-feel/org.archlinux.archlinux /usr/share/plasma/look-and-feel/org.archlinux.archlinux
  install -D "$pkgname"/wallpapers/Archlinux /usr/share/wallpapers/Archlinux
  install -D "$pkgnamer"/desktoptheme/archlinux "${pkgdir}"/usr/share/plasma/desktoptheme/archlinux
  mkdir -p /usr/share/color-schemes/"${pkgdir}"
  for t in Archlinux ArchlinuxDark; do
    cp  "$pkgname"/color-schemes/$t.colors /usr/share/color-schemes/"${pkgdir}"
  done
}

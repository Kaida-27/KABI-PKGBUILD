pkgname=plasma-theme-KABI
pkgver=1.1
pkgrel=2
pkgdesc="Plasma 5 theme for KABI"
arch=('any')
url="https://github.com/Kaida-27"
license=('CCPL:cc-by-sa')
depends=('plasma-workspace')
source=(git+"https://github.com/Kaida-27/plasma-theme-KABI")
md5sums=('SKIP')

package() {
	cd "${srcdir}/${pkgname}" || exit
  mkdir -p /usr/share/plasma/look-and-feel/org.archlinux.archlinux/
  cp -r look-and-feel/org.archlinux.archlinux /usr/share/plasma/look-and-feel/org.archlinux.archlinux/
  mkdir -p /usr/share/wallpapers/Archlinux
  cp -r  wallpapers/Archlinux /usr/share/wallpapers/Archlinux
  mkdir -p /usr/share/plasma/desktoptheme/archlinux
  cp -r  desktoptheme/archlinux /usr/share/plasma/desktoptheme/archlinux
   mkdir -p /usr/share/color-schemes/
  cp -r  /color-schemes/Archlinux.colors /usr/share/color-schemes/
  cp -r  /color-schemes/AArchlinuxDark.colors /usr/share/color-schemes/
  
}

pkgname=plasma-theme-KABI
pkgver=1.1
pkgrel=2
pkgdesc="Plasma 5 theme for KABI"
arch=('any')
url="https://github.com/Kaida-27"
license=('CCPL:cc-by-sa')
depends=('plasma-workspace')
source=(git+"https://github.com/Kaida-27/plasma-theme-KABI")
md5sums=('SKIP')

package() {
	cd "${srcdir}/${pkgname}" || exit
  install -D look-and-feel/org.archlinux.archlinux /usr/share/plasma/look-and-feel/org.archlinux.archlinux
  install -D wallpapers/Archlinux /usr/share/wallpapers/Archlinux
  install -D desktoptheme/archlinux /usr/share/plasma/desktoptheme/archlinux
  install -D /color-schemes/Archlinux.colors /usr/share/color-schemes/
  install -D /color-schemes/AArchlinuxDark.colors /usr/share/color-schemes/
  
  done
}

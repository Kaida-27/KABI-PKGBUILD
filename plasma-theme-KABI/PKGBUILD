pkgname=plasma-theme-KABI
pkgver=1.1
pkgrel=2
pkgdesc="Plasma 5 theme for KABI"
arch=('any')
url="https://github.com/Kaida-27"
license=('CCPL:cc-by-sa')
depends=('plasma-workspace')
source=(git+"https://github.com/Kaida-27/plasma-theme-KABI")
md5sums=('SKIP')

package() {
	cd "${srcdir}/${pkgname}" || exit
  mkdir -p "${pkgdir}"/usr/share/plasma/look-and-feel/org.archlinux.archlinux/
  cp -r look-and-feel/org.archlinux.archlinux "${pkgdir}"/usr/share/plasma/look-and-feel/org.archlinux.archlinux/
  mkdir -p "${pkgdir}"/usr/share/wallpapers/Archlinux
  cp -r  wallpapers/Archlinux "${pkgdir}"/usr/share/wallpapers/Archlinux
  mkdir -p "${pkgdir}"/usr/share/plasma/desktoptheme/archlinux
  cp -r  desktoptheme/archlinux "${pkgdir}"/usr/share/plasma/desktoptheme/archlinux
   mkdir -p "${pkgdir}"/usr/share/color-schemes/
  cp -r  /color-schemes "${pkgdir}"/usr/share/color-schemes
  
}
